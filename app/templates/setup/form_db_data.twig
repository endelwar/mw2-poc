{% extends "layout.twig" %}
{% block html_title %}Setup MailWatch{% endblock %}
{% block body_css_addon_class %}login-page{% endblock %}
{% block content %}
    <div class="login-box">
        <div class="login-box-body">
            <div class="login-logo">
                <a href="/"><img src="/img/mailwatch2-logo.png" alt="MailWatch2"></a>
            </div>
            <p class="login-box-msg">Insert your database information</p>

            <form action="/setup" method="post">
                <div class="form-group">
                    <p class="setup-p">Database type</p>
                    <div class="radio">
                        <label>
                            <input type="radio" name="db[driver]" id="db_type_mysql" value="mysql" checked>
                            MySQL
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="db[driver]" id="db_type_postgresql" value="postgresql">
                            PostgreSQL
                        </label>
                    </div>
                </div>
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="Host" name="db[host]">
                    <span class="fa fa-server form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="Port" name="db[port]" id="db_port">
                </div>

                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="Database" name="db[database]">
                    <span class="fa fa-database form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="Username" name="db[username]">
                    <span class="fa fa-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Password" name="db[password]">
                    <span class="fa fa-key form-control-feedback"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-block btn-flat">Save</button>
            </form>
        </div>
    </div>
{% endblock %}
